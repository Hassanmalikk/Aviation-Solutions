<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    tools:context=".EnterFlight"
    android:background="@drawable/img">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Flight Details"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/passengerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Passenger Name"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />
    <EditText
        android:id="@+id/departureDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Departure (dd-mm-yyyy)"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/departureTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time of Departure (HH:mm)"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/originEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Origin"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/destinationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <EditText
        android:id="@+id/flightNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Flight Number"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textColor="#EEEEEE" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Flight"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</LinearLayout>
